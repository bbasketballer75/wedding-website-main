{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ðŸš€ Agent: Debug Frontend (Next.js)",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "serverReadyAction": {
        "action": "debugWithChrome",
        "pattern": "Local:\\s+(https?://[^\\s]+)",
        "uriFormat": "%s",
        "webRoot": "${workspaceFolder}/src"
      }
    },
    {
      "name": "ðŸ”§ Agent: Debug Backend (Express)",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/backend/server.js",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "ðŸ§ª Agent: Debug Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "args": ["--runInBand", "--detectOpenHandles"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "ðŸŽ¯ Agent: Debug Cypress E2E",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/cypress",
      "args": ["open"],
      "console": "integratedTerminal"
    }
  ]
}
