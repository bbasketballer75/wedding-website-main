{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "üöÄ Agent Mode: Full Development Environment",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev:full"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    },
    {
      "label": "ü§ñ Agent: Analyze Project",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-Command",
        "Write-Host 'üîç Analyzing project structure...'; Get-ChildItem -Recurse -File | Where-Object {$_.Extension -match '\\.(js|ts|jsx|tsx|css|scss|json|md)$'} | Group-Object Extension | Sort-Object Count -Descending | Format-Table Name, Count"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      }
    },
    {
      "label": "üß™ Agent: Run All Tests",
      "type": "shell",
      "command": "npm",
      "args": ["test"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      }
    },
    {
      "label": "üîß Agent: Fix All Issues",
      "type": "shell",
      "command": "npm",
      "args": ["run", "lint:fix"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      }
    },
    {
      "label": "üìä Agent: Performance Analysis",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build:analyze"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      }
    },
    {
      "label": "üöÄ Agent: Deploy to Production",
      "type": "shell",
      "command": "npm",
      "args": ["run", "deploy:prod"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      }
    }
  ]
}
