{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Ask Claude",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\.vscode\\claude-api.ps1",
        "-prompt",
        "${input:claudePrompt}",
        "-contextFile",
        "${workspaceFolder}\\.copilot_context.txt"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "close": true
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "env": {
          "ANTHROPIC_API_KEY": "your-api-key-here",
          "MAX_TOKENS": "4096"
        }
      }
    },
    {
      "label": "Ask Claude (Verbose)",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\.vscode\\claude-api.ps1",
        "-prompt",
        "${input:claudePrompt}",
        "-contextFile",
        "${workspaceFolder}\\.copilot_context.txt",
        "-verbose"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Claude + Copilot Refactor",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\.vscode\\claude-copilot-bridge.ps1",
        "-selectedText",
        "${selectedText}",
        "-languageId",
        "${fileExtname}",
        "-contextFile",
        "${workspaceFolder}\\.copilot_context.txt"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "group": "claude-refactor"
      }
    },
    {
      "label": "Update AI Context",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\.vscode\\update-context.ps1"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Claude: Web Search",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\.vscode\\claude-api.ps1",
        "-prompt",
        "@web ${input:webQuery}",
        "-contextFile",
        "${workspaceFolder}\\.copilot_context.txt"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Start MCP Filesystem Server",
      "type": "shell",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "${workspaceFolder}"],
      "isBackground": true,
      "runOptions": { "runOn": "folderOpen" },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Start MCP Git Server",
      "type": "shell",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-git", "${workspaceFolder}"],
      "isBackground": true,
      "runOptions": { "runOn": "folderOpen" },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Start MCP Playwright Server",
      "type": "shell",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-puppeteer"],
      "isBackground": true,
      "runOptions": { "runOn": "folderOpen" },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Start MCP Fetch Server",
      "type": "shell",
      "command": "npx",
      "args": ["-y", "mcp-fetch"],
      "isBackground": true,
      "runOptions": { "runOn": "folderOpen" },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Start MCP Time Server",
      "type": "shell",
      "command": "npx",
      "args": ["-y", "mcp-time"],
      "isBackground": true,
      "runOptions": { "runOn": "folderOpen" },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Start MCP MongoDB Server",
      "type": "shell",
      "command": "npx",
      "args": ["-y", "mcp-mongodb"],
      "isBackground": true,
      "runOptions": { "runOn": "folderOpen" },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Start MCP Sequential Thinking Server",
      "type": "shell",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "isBackground": true,
      "runOptions": { "runOn": "folderOpen" },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Start MCP Memory Server",
      "type": "shell",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "isBackground": true,
      "runOptions": { "runOn": "folderOpen" },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Start All MCP Servers",
      "dependsOrder": "parallel",
      "dependsOn": [
        "Start MCP Filesystem Server",
        "Start MCP Git Server",
        "Start MCP Playwright Server",
        "Start MCP Fetch Server",
        "Start MCP Time Server",
        "Start MCP MongoDB Server",
        "Start MCP Sequential Thinking Server",
        "Start MCP Memory Server"
      ],
      "runOptions": { "runOn": "folderOpen" }
    }
  ],
  "inputs": [
    {
      "id": "claudePrompt",
      "type": "promptString",
      "description": "Enter prompt for Claude 4 (add @web for live search):",
      "default": "How can I improve this code for Windows 11?"
    },
    {
      "id": "webQuery",
      "type": "promptString",
      "description": "Enter web search query for Claude:",
      "default": "latest Windows 11 development best practices"
    }
  ]
}
