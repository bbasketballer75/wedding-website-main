{
  "organization": {
    "version": "2.0.0",
    "description": "Comprehensive Project Organization Configuration",
    "lastUpdated": "2025-08-14",

    "structure": {
      "scripts": {
        "core": [
          "maintain-project.ps1",
          "cleanup-root-directory-clean.ps1",
          "fix-all-issues.ps1",
          "validate-optimizations.mjs",
          "comprehensive-project-organizer.ps1"
        ],
        "development": [
          "dev-startup.ps1",
          "start-dev-with-monitor.ps1",
          "setup-development-environment.ps1",
          "validate-dev-env.mjs",
          "verify-development-environment.ps1"
