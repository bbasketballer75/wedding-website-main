{
  // Updated tasks configuration - no more mcp-fetch errors
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Ask Claude",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\.vscode\\claude-api.ps1",
        "-prompt",
        "${input:claudePrompt}",
        "-contextFile",
        "${workspaceFolder}\\.copilot_context.txt"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true,
        "close": true
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "options": {
        "env": {
          "ANTHROPIC_API_KEY": "your-api-key-here",
          "MAX_TOKENS": "4096"
        }
      }
    },
    {
      "label": "Update AI Context",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\.vscode\\update-context.ps1"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "Claude: Web Search",
      "type": "shell",
      "command": "pwsh",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\.vscode\\claude-api.ps1",
        "-prompt",
        "@web ${input:webQuery}",
        "-contextFile",
        "${workspaceFolder}\\.copilot_context.txt"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "Start MCP Filesystem Server",
      "type": "shell",
      "command": "node",
      "args": [
        "C:/Users/Austin/Documents/GitHub/servers/src/filesystem/dist/index.js",
        "${workspaceFolder}"
      ],
      "isBackground": true,
      "runOptions": { "runOn": "folderOpen" },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Start MCP Fetch Server",
      "type": "shell",
      "command": "python",
      "args": ["-m", "mcp_server_fetch"],
      "options": {
        "cwd": "C:/Users/Austin/Documents/GitHub/servers/src/fetch/src"
      },
      "isBackground": true,
      "runOptions": { "runOn": "folderOpen" },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Start MCP Time Server",
      "type": "shell",
      "command": "python",
      "args": ["-m", "mcp_server_time"],
      "options": {
        "cwd": "C:/Users/Austin/Documents/GitHub/servers/src/time/src"
      },
      "isBackground": true,
      "runOptions": { "runOn": "folderOpen" },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Start MCP MongoDB Server",
      "type": "shell",
      "command": "npx",
      "args": ["tsx", "C:/Users/Austin/Documents/GitHub/mongodb-mcp-server/src/index.ts"],
      "isBackground": true,
      "runOptions": { "runOn": "folderOpen" },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Start MCP Git Server",
      "type": "shell",
      "command": "npx",
      "args": ["-y", "mcp-git", "${workspaceFolder}"],
      "isBackground": true,
      "runOptions": { "runOn": "folderOpen" },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Start MCP Playwright Server",
      "type": "shell",
      "command": "npx",
      "args": ["-y", "@playwright/mcp"],
      "isBackground": true,
      "runOptions": { "runOn": "folderOpen" },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Start MCP Sequential Thinking Server",
      "type": "shell",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "isBackground": true,
      "runOptions": { "runOn": "folderOpen" },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Start MCP Memory Server",
      "type": "shell",
      "command": "node",
      "args": [
        "C:/Users/Austin/Documents/GitHub/servers/src/memory/dist/index.js",
        "${workspaceFolder}"
      ],
      "isBackground": true,
      "runOptions": { "runOn": "folderOpen" },
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Start All MCP Servers",
      "dependsOrder": "parallel",
      "dependsOn": [
        "Start MCP Filesystem Server",
        "Start MCP Fetch Server",
        "Start MCP Time Server",
        "Start MCP MongoDB Server",
        "Start MCP Git Server",
        "Start MCP Playwright Server",
        "Start MCP Sequential Thinking Server",
        "Start MCP Memory Server"
      ],
      "runOptions": { "runOn": "folderOpen" }
    }
  ],
  "inputs": [
    {
      "id": "claudePrompt",
      "type": "promptString",
      "description": "Enter prompt for Claude 4 (add @web for live search):",
      "default": "How can I improve this code for Windows 11?"
    },
    {
      "id": "webQuery",
      "type": "promptString",
      "description": "Enter web search query for Claude:",
      "default": "latest Windows 11 development best practices"
    }
  ]
}
